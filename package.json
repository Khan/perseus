{
  "name": "perseus",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:Khan/perseus.git",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "config/build"
  ],
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/eslint-parser": "^7.16.5",
