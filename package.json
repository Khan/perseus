        "build:types": "tsc --build tsconfig-build.json",
        "build:prodsizecheck": "yarn build --configEnvironment='production'",
        "watch": "yarn build --watch",
        "clean": "./utils/clean.sh",
        "coverage": "./utils/test-with-coverage.sh",
