        "test": "jest",
        "storybook": "storybook dev -p 6006",
        "start": "storybook dev -p 6006",
        "build-storybook": "storybook build --stats-json",
        "cypress": "cypress open --component",
        "cypress:ci": "cross-env cypress run --component",
